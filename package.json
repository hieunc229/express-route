{
  "name": "rumbo-template",
  "version": "0.0.1",
  "description": "Build fullstack app with Express and React",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src/routes -r tsconfig-paths/register src/dev.ts",
    "clean": "rm -rf dist build __rumbo bundle",
    "build-only": "yarn bundle-clientssr && tsc && yarn copy-assets && yarn bundle-client && yarn bundle-server",
    "build": "yarn build-only",
    "prebuild": "yarn clean",
    "postbuild": "cp -r dist/ bundle/public/ && cp certs/ecosystem.config.js bundle/server/",
    "copy-assets": "copyfiles src/**/*.css build/",
    "bundle-clientssr": "ts-node scripts/bundle-clientssr.ts",
    "bundle-client": "node scripts/bundle-client.js",
    "bundle-server": "node --max-old-space-size=4096 scripts/bundle-server.js",
    "start": "node bundle/server/index.js",
    "s": "./scripts.sh",
    "check-circular": "npx madge --circular --extensions ts ."
  },
  "author": "Hieu Nguyen",
  "license": "AGPL-3.0",
  "dependencies": {
    "better-sqlite3": "^8.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "knex": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "rumbo": "^0.4.8"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-flow": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "babel-loader": "^9.1.3",
    "chalk": "4",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.1",
    "postcss-loader": "^7.3.3",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-merge": "^5.9.0"
  }
}
